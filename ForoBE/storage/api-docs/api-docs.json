                ],
                "summary": "Create a new thread",
                "operationId": "255f0bb7e2ddfb8e2ce4a56c4942750b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Thread"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Thread created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Thread"
                                }
